        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorColor">@color/red</item>
        <item name="tabMinWidth">@dimen/dimen_80</item>
        <item name="tabMode">auto</item>
        <item name="tabIndicatorHeight">@dimen/dimen_45</item>
        <item name="tabTextAppearance">@style/tab_text</item>
<!--        <item name="selectableItemBackground">@drawable/tab_indicator</item>-->
        <item name="tabTextColor">@color/white</item>

    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>
